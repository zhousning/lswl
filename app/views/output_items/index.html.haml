- provide(:title, t('.title'))


.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-9.ml-sm-auto.col-lg-10.p-3{:role => "main"}
      - content_for :card_header do
        %h5
          = fa_icon "list", text: "出库单明细"
          = link_to "/retrievals/#{@retrieval.id}/#{controller_name}/new", :class => "button pull-right button-primary" do
            = fa_icon "plus", text: "选择物品", right: false 
      - content_for :card_body do
        .container-fluid
          .row
            .col-md-12
              %table.text-center.table-striped.table-sm{:'data-toggle' => "table", :"data-pagination"=>"true", :'data-id-table'=>"advancedTable"}
                %thead
                  %tr
                    %th{:scope => "col"} #
                  
                    %th{:scope => "col"}
                      = Setting.output_items.count
                    %th{:scope => "col"}
                      设置
                %tbody
                  - @output_items.each_with_index do |output_item, index|
                    %tr
                      %td{:scope => "row"}
                        = index+1
                    
                      %td
                        = output_item.count
                      %td
                        .container-fluid
                          .row.justify-content-center
                            = link_to "编辑", edit_retrieval_output_item_path(@retrieval, output_item), :class => "button button-highlight button-small mr-1" 
                            = link_to "详细",  retrieval_output_item_path(@retrieval, output_item), :class => "button button-primary button-small mr-1" 
                            = link_to "删除",  retrieval_output_item_path(@retrieval, output_item), :method => :delete, :data => {:confirm => "确定删除吗?"}, :class => "button button-caution button-small" 
      = render "layouts/bootstrap/card"
