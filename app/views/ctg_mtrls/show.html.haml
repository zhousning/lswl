- provide(:title, t('.title'))

.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-9.ml-sm-auto.col-lg-10.p-3{:role => "main"}
      - content_for :card_header do
        %h5
          = fa_icon "newspaper-o", text: t(controller_name + "." + action_name + '.title')
          = link_to "/#{controller_name}", :class => "button pull-right button-primary" do
            = fa_icon " chevron-left", text: Setting.systems.btn_back, right: false 
      - content_for :card_body do
        .container-fluid
          .row
            .col-md-8.offset-2
              .card-body
                .container-fluid
                  .row
                  
                    .col-md-6.mb-3.mr-3
                      = Setting.ctg_mtrls.idno
                      = @ctg_mtrl.idno
                  
                    .col-md-6.mb-3.mr-3
                      = Setting.ctg_mtrls.name
                      = @ctg_mtrl.name
                  
                    .col-md-6.mb-3.mr-3
                      = Setting.ctg_mtrls.pet_name
                      = @ctg_mtrl.pet_name
                  
                    .col-md-6.mb-3.mr-3
                      = Setting.ctg_mtrls.model_no
                      = @ctg_mtrl.model_no
                  
                  .row
                  
                  .row
                  
                    - @ctg_mtrl.enclosures.each do |e|
                      .col-md-6
                        = image_tag e.file_url(:small_width), :class => "w-100"
                  
                  .row
                  
                  
                  .row
                  
      = render "layouts/bootstrap/card"
